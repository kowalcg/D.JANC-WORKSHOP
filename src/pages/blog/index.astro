---
import Layout from '../../layouts/Layout.astro';

const posts = [
  {
    slug: 'kiedy-wymieniac-opony-na-zimowe',
    title: 'Kiedy wymieniać opony na zimowe — poradnik 2026',
    date: '2026-10-01',
    dateDisplay: '1 października 2026',
    excerpt: 'Dowiedz się kiedy wymieniać opony na zimowe i jak rozpoznać, że czas na zmianę. Praktyczny poradnik dla kierowców w Polsce.',
    category: 'Opony',
  },
];
---
<Layout
  title="Blog Motoryzacyjny | D.JANC WORKSHOP — Warsztat Toruń"
  description="Porady motoryzacyjne od D.JANC WORKSHOP. Kiedy wymieniać opony, jak dbać o hamulce, serwis klimatyzacji — praktyczne wskazówki dla kierowców z Torunia."
>
  <section class="bg-[#1a2332] text-white py-12 px-4">
    <div class="max-w-4xl mx-auto text-center">
      <h1 class="text-3xl md:text-4xl font-bold mb-3">Blog — Porady Motoryzacyjne</h1>
      <p class="text-gray-300">Praktyczne wskazówki od mechaników D.JANC WORKSHOP w Wielkiej Nieszawce</p>
    </div>
  </section>

  <div class="max-w-4xl mx-auto px-4 py-12">
    <div class="grid grid-cols-1 gap-6">
      {posts.map(post => (
        <article class="bg-white border border-gray-200 rounded-xl overflow-hidden shadow-sm hover:shadow-md transition-shadow">
          <div class="p-6">
            <div class="flex items-center gap-3 mb-3">
              <span class="bg-[#e17055] text-white text-xs font-bold px-2 py-1 rounded">{post.category}</span>
              <time class="text-xs text-gray-400">{post.dateDisplay}</time>
            </div>
            <h2 class="text-xl font-bold text-[#1a2332] mb-2">
              <a href={`/blog/${post.slug}`} class="hover:text-[#e17055] transition-colors">
                {post.title}
              </a>
            </h2>
            <p class="text-sm text-gray-600 mb-4">{post.excerpt}</p>
            <a href={`/blog/${post.slug}`}
               class="inline-block text-[#e17055] font-bold text-sm hover:underline">
              Czytaj więcej →
            </a>
          </div>
        </article>
      ))}
    </div>

    <div class="mt-12 bg-[#f8f9fa] rounded-xl p-6 text-center">
      <p class="text-gray-600 mb-4">Masz pytanie dotyczące Twojego samochodu?</p>
      <a href="tel:+48451273483"
         class="inline-block bg-[#e17055] text-white px-8 py-3 rounded font-bold hover:bg-[#c0392b] transition-colors">
        Zadzwoń: 451-273-483
      </a>
    </div>
  </div>
</Layout>
